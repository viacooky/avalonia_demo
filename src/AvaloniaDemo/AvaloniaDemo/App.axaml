<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaDemo.App"
             xmlns:semi="https://irihi.tech/semi"
             xmlns:u="https://irihi.tech/ursa/themes/semi"
             xmlns:dt="clr-namespace:AvaloniaDemo.DataTemplates"
             RequestedThemeVariant="Light">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <semi:SemiTheme Locale="zh-CN" />
        <!-- 开启弹窗框动画 -->
        <semi:SemiPopupAnimations />
        <u:SemiTheme Locale="zh-CN" />
    </Application.Styles>

    <Application.DataTemplates>
        <dt:ViewLocator />
    </Application.DataTemplates>
    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/logo.ico"
                      ToolTipText="AvaloniaDemo">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="显示主窗口" Click="ShowWindow_OnClicked" />
                        <NativeMenuItemSeparator />
                        <NativeMenuItem Header="退出" Click="ExitApp_OnClicked" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
</Application>