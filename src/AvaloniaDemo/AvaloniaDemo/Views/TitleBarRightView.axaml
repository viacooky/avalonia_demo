<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="32"
             x:Class="AvaloniaDemo.Views.TitleBarRightView"
             xmlns:u="https://irihi.tech/ursa">
    <StackPanel Orientation="Horizontal">
        <u:IconButton Classes="Tertiary"
                      Theme="{StaticResource BorderlessIconButton}"
                      Icon="{StaticResource SemiIconGithubLogo}"
                      Click="OpenRepo" />
        <u:ThemeToggleButton IsThreeState="False" Mode="Controller" />
    </StackPanel>
</UserControl>